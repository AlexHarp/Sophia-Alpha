{#
/**
 * @file
 * Default template for a field.
 */
#}
{%
  set classes = [
  label_display == 'inline' ? 'd-flex',
]
%}
{%
  set title_classes = [
  'field__label',
  'font-weight-bold',
  label_display == 'visually_hidden' ? 'visually-hidden',
]
%}

{% if label_hidden %}
  {% if multiple %}
  {% for row in items|batch(3, 'No item') %}
    <div class="row lead-in-row">
        {% for item in row %}
          <div{{ item.attributes.addClass('col-md') }}>{{ item.content }}</div>
        {% endfor %}
    </div>
  {% endfor %}
  {% else %}
    {% for item in items %}
      <div{{ attributes.addClass(classes) }}>{{ item.content }}</div>
    {% endfor %}
  {% endif %}
{% else %}
  <div{{ attributes.addClass(classes) }}>
    <div{{ title_attributes.addClass(title_classes) }}>
      {{ label }}{% if label_display == 'inline' %}<span class="field__label__suffix mr-1">:</span>{% endif %}
    </div>
    {% if multiple %}
      {% endif %}
      {% for row in items|batch(3, 'No item') %}
        <div class="row lead-in-row">
            {% for item in row %}
              <div{{ item.attributes.addClass('col-md') }}>{{ item.content }}</div>
            {% endfor %}
        </div>
      {% endfor %}
      {% if multiple %}
    {% endif %}
  </div>
{% endif %}
